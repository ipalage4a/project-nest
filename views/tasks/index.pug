doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Document
  body
    h1 Tasks 
    ul
      each task in tasks
        li
          p(onclick=`updateTask("${task.id}", ${task.done})`)= task.title
            input(type="checkbox", checked=task.done)
script(src='/index.js')
 